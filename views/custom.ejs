
<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>
  <!-- Custom Build Form -->
  <main>
    <section>
    <div class="hero-section">
      <h1>Request a Custom Build</h1>
    </div>
    <div class="container">
      <form action="/custom" method="POST">
        <label for="name">Name:</label><br>
        <input class="input" type="text" id="name" name="name" required><br><br>
        <label for="email">Email:</label><br>
        <input class="input" type="email" id="email" name="email" required><br><br>
        <label for="message">Describe Your Custom Build:</label><br>
        <textarea id="message" class="input" name="message" rows="5" required></textarea><br><br>
        <input class="contact-btn" type="submit" value="Submit Request">
      </form>
    </div>
    </section>
  </main>
  <!-- Include the Footer Partial -->

</body>
</html>